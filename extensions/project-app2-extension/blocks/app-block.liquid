{% comment %} 应用块 - 对应页面 {% endcomment %}
<image-gallery data-id="{{ block.id }}">
  <div class="gallery">
    <figure class="gallery__item-bg">
      {%- if block.settings.image_1 -%}
        <img
          src="{{ block.settings.image_1 | image_url: width: 1024 }}"
          alt="{{ block.settings.image_1.alt }}"
          loading="lazy"
          width="{{ block.settings.image_1.width }}"
          height="{{ block.settings.image_1.height }}"
        >
      {%- else -%}
        <img src="{{ 'party-hat-frenchie.jpg' | asset_url }}" loading="lazy" width="100vw" height="280">
      {%- endif -%}
    </figure>
    <div class="gallery__text">
      <figure class="gallery__item">
        {%- if block.settings.heading -%}
          <p>{{ block.settings.heading }}</p>
        {%- endif -%}
      </figure>

      <figure class="gallery__item-sub">
        {%- if block.settings.description -%}
          <p>{{ block.settings.description }}</p>
        {%- endif -%}
      </figure>
      <figure class="gallery__item-but">
        <button
          class="but-lf"
        >
          Earn points
        </button>
        <button
          class="but-rg"
        >
          Redeem points
        </button>
      </figure>
    </div>
  </div>
</image-gallery>

{% schema %}
{
  "name": "Custom conf",
  "target": "section",
  "stylesheet": "image-gallery.css",
  "javascript": "image-gallery.js",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "MOMENT LOYALTY"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Become a member of our loyalty program and gain access to exclusive member benefits every time you shop. Many attractive rewards are waiting for you!"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    }
  ]
}
{% endschema %}
